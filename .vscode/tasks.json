{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Main",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "./cmd/server/main.go"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Run Main (Live Reload)",
      "type": "shell",
      "command": "air",
      "args": [],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "Test (No Cache)",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "-count=1",
        "./..."
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run E2E Scenario (001_basic_minute_rollup)",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "./tests/e2e/scenarios/001_basic_minute_rollup/scenario.go"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}